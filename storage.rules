rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow evidence uploads
    match /trial-evidence/{classCode}/{roomId}/{allPaths=**} {
      allow write: if request.auth != null && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.classCode == classCode;
      allow read: if request.auth != null && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.classCode == classCode;
    }
  }
}
