rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow evidence uploads
    match /trial-evidence/{classCode}/{roomId}/{allPaths=**} {
      // Security: file size limit (5MB) + content type validation (images/pdf only)
      allow write: if request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.classCode == classCode
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf');
      allow read: if request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.classCode == classCode;
    }
  }
}
